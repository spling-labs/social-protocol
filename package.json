{
  "name": "@spling/social-protocol",
  "version": "1.4.6",
  "description": "The official Spling Labs social protocol. Create your own solona on-chain social media app with this protocol.",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest --forceExit",
    "clean": "rimraf dist",
    "prebuild": "yarn clean",
    "prepublishOnly": "yarn build",
    "docs": "typedoc --excludePrivate --includeVersion --out ./docs src",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "lint:fix": "eslint --fix \"src/**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md,json}\" --config ./.prettierrc",
    "codegen": "graphql-codegen",
    "codegen-watch": "graphql-codegen --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/spling-labs/social-protocol.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "solana",
    "blockchain",
    "protocol",
    "spling"
  ],
  "author": "Spling Labs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/spling-labs/social-protocol/issues"
  },
  "homepage": "https://splinglabs.com/",
  "devDependencies": {
    "@graphql-codegen/cli": "2.16.1",
    "@graphql-codegen/client-preset": "1.2.3",
    "@graphql-codegen/typescript": "2.8.5",
    "@types/jest": "^28.1.6",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.3",
    "jest-config": "^28.1.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.7",
    "ts-jest-resolver": "^2.0.0",
    "typedoc": "^0.23.8",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@project-serum/anchor": "^0.26.0",
    "@solana/spl-token": "^0.3.6",
    "@solana/web3.js": "^1.66.2",
    "axios": "^1.2.1",
    "bs58": "^5.0.0",
    "dayjs": "^1.11.4",
    "graphql-request": "^5.0.0",
    "react-native-shadow-drive": "^3.1.4"
  },
  "optionalDependencies": {
    "react-native-fs": "^2.20.0"
  }
}
